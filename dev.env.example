# For local development, include a dev.env (gitignored) in the root of the project.
# Fill in values for secrets and credentials as needed.

# Use "dev,seed" to seed sample movie data on startup
SPRING_PROFILES_ACTIVE=dev

# =========================
# Database
# =========================
DEV_SPRING_JPA_HIBERNATE_DDL_AUTO=update

DEV_DB_URL=jdbc:postgresql://localhost:5432/vaiki
DEV_DB_USER=
DEV_DB_PASSWORD=

# =========================
# CloudFront signing
# =========================

# CloudFront key pair ID (from AWS Console)
DEV_CLOUDFRONT_KEY_PAIR_ID=

# Absolute path or file: URI to the PKCS#8 private key used for signing
# Examples:
#   file:/Users/you/.aws/cloudfront_pkcs8.pem
#   /home/you/secrets/cloudfront_pkcs8.pem
DEV_CLOUDFRONT_PRIVATE_KEY_FILE=

# CloudFront distribution domain name (no protocol)
# Example: d123abcd.cloudfront.net
DEV_CLOUDFRONT_DOMAIN=

# Default expiration for signed URLs (seconds)
# Can be overridden per-request later if needed
DEV_CLOUDFRONT_URL_TTL_SECONDS=3600
